---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/ui/Header";
import Hero from "@/components/ui/Hero.astro";
import About from "@/components/ui/About.astro";
import Clubs from "@/components/landing/Committees.astro";
import GymkhanaTeams from "@/components/landing/Leadership";
import Events from "@/components/landing/Events.astro";
import Quote from "@/components/Quote.astro";
import Footer from "@/components/ui/Footer.astro";
import { HeroHighlight } from "@/components/ui/hero-highlight";
import App from './org-chart/App.jsx';
import "@/styles/global.css";
---


<Layout title="Student Gymkhana | IIIT Vadodara" description="IIITV Student Gymkhana | Committees | Clubs">
  <Header client:only />
  <main class="flex-1">
    <Hero
    title="Unleash Your Potential at"
    title_element="IIITV Gymkhana"
    tag_line={"Discover a vibrant community of students dedicated to personal growth, fitness, and campus life"}
    image="/hero-highlight-svg.svg"
    type_true={true}
    p_button={{ show: true, text: "Reach Us" }}
    s_button={{ show: false, text: "Contact Us" }}
    />
    <App className="bg-muted max-[700px] h-[700px] overflow-hidden relative" client:only href="./org-chart"/>
    <About
      title="About Student Gymkhana"
      desc="The IIITV Gymkhana is the student government body that represents the diverse interests and aspirations of the student community at IIIT Vadodara. We are committed to fostering a vibrant campus life, promoting student welfare, and empowering our peers to reach new heights."
    />
    <Clubs />
    <HeroHighlight
      client:load
      containerClassName=""
      >
      <GymkhanaTeams client:load />
    </HeroHighlight>
    <Events />
    <Quote />
  </main>
  <Footer />
</Layout>
